rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access on all documents to authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public share links
    match /shareLinks/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Email collections
    match /emails/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /emailClient/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /emailFolders/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /emailImportStatus/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Failed imports collection
    match /failed_imports/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Import history
    match /import_history/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // System collections
    match /system/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
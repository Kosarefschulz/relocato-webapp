# Firebase Configuration (Required)
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
REACT_APP_FIREBASE_PROJECT_ID=your_project_id_here
REACT_APP_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
REACT_APP_FIREBASE_APP_ID=your_app_id_here
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Email Configuration (Required for Email Client)
REACT_APP_IMAP_SERVER=mail.ionos.de
REACT_APP_IMAP_PORT=993
REACT_APP_EMAIL_USERNAME=your_email@company.com
REACT_APP_EMAIL_PASSWORD=your_email_password

# SMTP Configuration (Required for Email Sending)
REACT_APP_SMTP_HOST=smtp.ionos.de
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_SECURE=false
REACT_APP_SMTP_USER=your_smtp_user@domain.de
REACT_APP_SMTP_PASS=your_smtp_password
REACT_APP_SMTP_FROM=noreply@domain.de

# Backend Configuration
REACT_APP_BACKEND_URL=https://europe-west1-umzugsapp.cloudfunctions.net/backendApi
REACT_APP_API_URL=https://api.ruempel-schmiede.com

# Base URL for Email Links (Required for Production)
REACT_APP_BASE_URL=https://your-domain.vercel.app

# Email Service (Optional)
REACT_APP_SENDGRID_API_KEY=your_sendgrid_api_key_here
REACT_APP_SENDGRID_FROM_EMAIL=your_email@company.com

# Google Services (Optional)
REACT_APP_GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here
REACT_APP_GOOGLE_SHEETS_ID=your_spreadsheet_id_here

# Platform Configuration (Optional)
# Set to 'true' to use Vercel platform instead of Firebase
REACT_APP_USE_VERCEL=false